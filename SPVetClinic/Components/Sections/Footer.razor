            </div>

            <div class="footer-column">
                <h4>Contacto</h4>
                <ul>
                    <li>
                        <NavLink href="contacto">
                            <Icon Name="location" Size="16" /> @AppConstants.Clinic.Address
                        </NavLink>
                    </li>
                    <li><a href="@AppConstants.Urls.TelLink(AppConstants.Phone.MainWhatsApp)">
