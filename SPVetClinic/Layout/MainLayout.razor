@inherits LayoutComponentBase
@inject IJSRuntime JS

<a href="#main-content" class="skip-link">Saltar al contenido</a>
<TopNav />
<div class="page main-layout-onepage">
    <main id="main-content" role="main">
        @Body
    </main>
    <Footer />
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Must run on every render so new .reveal elements from page
        // navigation get observed by the IntersectionObserver.
        await JS.InvokeVoidAsync("initScrollAnimations");

        if (firstRender)
        {
            await JS.InvokeVoidAsync("clearTextSelection");
        }
    }
}