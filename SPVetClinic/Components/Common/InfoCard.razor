@* ============================================
   INFO CARD - Componente Reutilizable
   Uso: <InfoCard Icon="🕐" Title="Horario" Value="09:00 a 18:30 hrs" Style="Info" />
   ============================================ *@

@if (Style == InfoCardStyle.Info)
{
    <div class="info-card">
        <span class="info-icon">@Icon</span>
        <div class="info-text">
            <strong>@Title</strong>
            <span>@Value</span>
        </div>
    </div>
}
else
{
    <div class="contact-item">
        <div class="contact-icon">@Icon</div>
        <div class="contact-item-content">
            <h4>@Title</h4>
            <p>@Value</p>
        </div>
    </div>
}

@code {
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public InfoCardStyle Style { get; set; } = InfoCardStyle.Info;

    public enum InfoCardStyle
    {
        Info,
        Contact
    }
}