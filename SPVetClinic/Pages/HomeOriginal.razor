@page "/home-original"
@inject IJSRuntime JS

<PageTitle>San Pablo Vet Clínic - Versión Original</PageTitle>

<!-- ============================================
     HERO SECTION - Versión con Badges y Emojis
     ============================================ -->
<HeroOriginalSection />

<!-- ============================================
     CARRUSEL DE ANUNCIOS
     ============================================ -->
<AnnouncementCarousel />

<!-- ============================================
     FEATURE CARDS
     ============================================ -->
<FeatureCardsSection />

<!-- ============================================
     FOOTER
     ============================================ -->
<Footer />

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initScrollAnimations");
            await JS.InvokeVoidAsync("clearTextSelection");
        }
    }
}