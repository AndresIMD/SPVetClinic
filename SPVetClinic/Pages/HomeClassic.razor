@page "/home-classic"
@inject IJSRuntime JS

<PageTitle>San Pablo Vet Clínic - Versión Classic</PageTitle>

<!-- ============================================
     HERO SECTION - Versión con Carrusel
     ============================================ -->
<HeroClassicSection />

<!-- ============================================
     CARRUSEL DE ANUNCIOS
     ============================================ -->
<AnnouncementCarousel />

<!-- ============================================
     FEATURE CARDS
     ============================================ -->
<FeatureCardsSection />

<!-- ============================================
     FOOTER
     ============================================ -->
<Footer />

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initScrollAnimations");
            await JS.InvokeVoidAsync("initCarousel");
            await JS.InvokeVoidAsync("clearTextSelection");
        }
    }
}